{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "None",
    "moduleResolution": "Node",
    "target": "ES2017",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "downlevelIteration": true
  },
  "include": [ "src/**/*", "test/**/*" ]
}
