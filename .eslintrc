rules:
  indent:
    - 2
    - 2
    - SwitchCase: 1
  quotes:
    - 2
    - single
  semi:
    - 2
    - always
  array-bracket-spacing:
    - 2
    - always
  key-spacing:
    - 2
    - beforeColon: false
      afterColon: true
  object-curly-spacing:
    - 2
    - always
  space-infix-ops:
    - 0
    - int32Hint: false
  no-var:
    - 2
  prefer-spread:
    - 2
  no-trailing-spaces:
    - 2
  block-spacing:
    - 2
    - always
  comma-spacing:
    - 2
    - before: false
      after: true
  arrow-spacing:
    - 2
    - before: true
      after: true
  typescript/no-unused-vars:
    - 2
  no-undef:
    - 0
  typescript/type-annotation-spacing:
    - 2
parser: "typescript-eslint-parser"
plugins:
  - "typescript"
parserOptions:
  ecmaVersion: 2017
  ecmaFeatures:
    experimentalObjectRestSpread: true
  sourceType: "module"
env:
  es6: true
  node: true
extends:
  - eslint:recommended
