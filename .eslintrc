rules:
  indent:
    - off
  quotes:
    - 2
    - single
  semi:
    - 2
    - always
  array-bracket-spacing:
    - 2
    - always
  key-spacing:
    - 2
    - beforeColon: false
      afterColon: true
  object-curly-spacing:
    - 2
    - always
  space-infix-ops:
    - 0
    - int32Hint: false
  no-var:
    - 2
  prefer-spread:
    - 2
  no-trailing-spaces:
    - 2
  block-spacing:
    - 2
    - always
  comma-spacing:
    - 2
    - before: false
      after: true
  arrow-spacing:
    - 2
    - before: true
      after: true
  no-undef:
    - 0
  "@typescript-eslint/indent":
    - 2
    - 2
  "@typescript-eslint/no-unused-vars":
    - 2
  "@typescript-eslint/type-annotation-spacing":
    - 2
  "@typescript-eslint/no-explicit-any":
    - 0
  "@typescript-eslint/explicit-function-return-type":
    - 0
parser: "@typescript-eslint/parser"
plugins:
  - "@typescript-eslint"
parserOptions:
  ecmaVersion: 2017
  ecmaFeatures:
    experimentalObjectRestSpread: true
  sourceType: "module"
env:
  es6: true
  node: true
extends:
  - eslint:recommended
  - plugin:@typescript-eslint/recommended
